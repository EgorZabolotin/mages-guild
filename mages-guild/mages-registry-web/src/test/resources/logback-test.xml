<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <appender name="ADMIN" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${jetty.home}/logs/mages-registry-web.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${jetty.home}/logs/mages-registry-web_%i.log</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>10</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%date{yyy-MM-dd HH:mm:ss.SSSXXX} %-5level [%thread] %logger{30} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{yyy-MM-dd HH:mm:ss.SSSXXX} %-5level [%thread] %logger{30} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- TRACE, DEBUG, INFO, WARN, ERROR, OFF -->
    <logger name="org.springframework" level="WARN">
        <appender-ref ref="CONSOLE"></appender-ref>
    </logger>


    <logger name="mag.near.lux" level="DEBUG">
        <appender-ref ref="CONSOLE"></appender-ref>
    </logger>


</configuration>